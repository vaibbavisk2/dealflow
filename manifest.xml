<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
           xsi:type="MailApp">

  <Id>f1b6a5f3-0c2a-4eaa-9a21-000000000001</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Your Name</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="CRE Deal Helper" />
  <Description DefaultValue="PoC: button opens a task pane and reads subject." />

  <SupportUrl DefaultValue="https://vaibbavisk2.github.io/dealflow/" />

  <AppDomains>
    <AppDomain>https://vaibbavisk2.github.io</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.5">
      <Set Name="Mailbox" />
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://vaibbavisk2.github.io/dealflow/taskpane.html"/>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadItem</Permissions>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.5">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="residFunctionFile" />
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgread.group">
                <Label resid="residGroupLabel"/>
                <Control xsi:type="Button" id="msgread.launchPane">
                  <Label resid="residButtonLabel"/>
                  <Supertip>
                    <Title resid="residButtonLabel"/>
                    <Description resid="residButtonDesc"/>
                  </Supertip>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="residTaskPaneUrl"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Urls>
        <bt:Url id="residTaskPaneUrl" DefaultValue="https://vaibbavisk2.github.io/dealflow/taskpane.html"/>
        <bt:Url id="residFunctionFile" DefaultValue="https://vaibbavisk2.github.io/dealflow/function-file.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="residButtonLabel" DefaultValue="CRE Deal"/>
        <bt:String id="residGroupLabel" DefaultValue="CRE Tools"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="residButtonDesc" DefaultValue="Open the CRE deal analysis pane"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>